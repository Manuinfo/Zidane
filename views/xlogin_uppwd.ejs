<div id="d_login" style="margin:0 auto; width:100px; height:50px; border:1px solid #ffff00;background:url('/admin/images/login_back.jpg')">
    <div style="margin-left: 900px;margin-top:200px">
        <div class="form-group">
            <div class="col-sm-7">
                <input type="password" class="form-control" id="acc_old_pwd"  placeholder="请输入旧密码">
            </div>
        </div>

        <div class="form-group" >
            <div class="col-sm-7" style="margin-top: 10px">
                <input type="password" class="form-control" id="acc_new_pwd_1" placeholder="请输入新密码">
            </div>
        </div>

        </br>
        <div class="form-group" >
